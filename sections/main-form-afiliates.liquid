<div class="custom-form-afiliates-section" id="{{ section.settings.ancle }}">


  <div class="customer account-global-page login section-{{ section.id }}-padding">

    <h1 id="login" tabindex="-1">
      Accede a la red de afiliados
    </h1>
    <div>
      {%- if recover_success == true -%}
        <h3 class="form__message" tabindex="-1" autofocus>
          <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
            <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
            <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
            <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
          </svg>
          {{ 'customer.recover_password.success' | t }}
        </h3>
      {%- endif -%}
      {%- form 'customer_login', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          {% comment %} <h2 class="form__message" tabindex="-1" autofocus>
            <svg xmlns="http://www.w3.org/2000/svg" width="9" height="9" viewBox="0 0 9 9" fill="none">
              <path d="M0.7025 8.87167L0 8.16917L3.73333 4.43583L0 0.7025L0.7025 0L4.43583 3.73333L8.16917 0L8.87167 0.7025L5.13833 4.43583L8.87167 8.16917L8.16917 8.87167L4.43583 5.13833L0.7025 8.87167Z" fill="#931E31"/>
            </svg>
            <span>{{ 'templates.contact.form.error_heading' | t }}</span>
          </h2> {% endcomment %}
          <div class="form-error-msg">
            <svg xmlns="http://www.w3.org/2000/svg" width="9" height="9" viewBox="0 0 9 9" fill="none">
              <path d="M0.7025 8.87167L0 8.16917L3.73333 4.43583L0 0.7025L0.7025 0L4.43583 3.73333L8.16917 0L8.87167 0.7025L5.13833 4.43583L8.87167 8.16917L8.16917 8.87167L4.43583 5.13833L0.7025 8.87167Z" fill="#931E31"/>
            </svg>
            {{ form.errors | default_errors }}
          </div>
          
        {%- endif -%}

        {% comment %} {%- if shop.features.login_with_shop_classic_customer_accounts? -%}
          <section name="sign-in-with-shop-provider">
            {{ shop | login_button: hide_button: hide_shop_login_button }}

            {%- unless hide_shop_login_button -%}
              <p>
                {{ 'customer.login_page.alternate_provider_separator' | t }}
              </p>
            {%- endunless -%}
          </section>
        {%- endif -%} {% endcomment %}

        <div class="field main-input-field">
          <label for="CustomerEmail" class="main-input-field__label">
            {{ 'customer.login_page.email' | t }}
          </label>
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t }}"
            class="main-input-field__input"
          >
        </div>

        {%- if form.password_needed -%}
          <div class="field main-input-field">
            <label for="CustomerPassword" class="main-input-field__label">
              {{ 'customer.login_page.password' | t }}
            </label>
            <input
              type="password"
              value=""
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login_page.password' | t }}"
              class="main-input-field__input"
            >
          </div>

          <a href="#recover" class="global-color-link">
            {{ 'customer.login_page.forgot_password' | t }}
          </a>
        {%- endif -%}

        <button class="main-global-button">
          Acceder
        </button>

        {% comment %} <div>
          <span class="global-color-text">No tienes una cuenta, </span>
          <a href="{{ routes.account_register_url }}" class="global-color-link global-inlines">
            {{ 'customer.login_page.create_account' | t }}
          </a>
        </div> {% endcomment %}
      {%- endform -%}
    </div>
  </div>



  
</div>

{% schema %}
{
  "name": "Formulario-Afiliados",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "ancle",
      "label": "Ancla"
    },
  ],
  "presets": [
    {
      "name": "Formulario-Afiliados"
    }
  ]
}
{% endschema %}
