<div class="main-custom-product-card">
  {% assign plan = product.metafields.custom.plan.value %}
  {% assign characteristics = product.metafields.custom.grupo_de_caracteristicas.value %}

  <div class="main-custom-product-card--inner">

    {% if product.tags contains "Oferta" %}
      <span class="main-custom-product-card--inner__tag-offer">¡Oferta!</span>
    {% endif %}
    <svg class="corner-svg" xmlns="http://www.w3.org/2000/svg" width="119" height="130" viewBox="0 0 119 130" fill="none">
      <path d="M212.135 130H87.8654L0 42.1346V-82.1346L87.8654 -170H212.135L300 -82.1346V42.1346L212.135 130ZM106.457 85.1407H193.553L255.151 23.5428V-63.553L193.553 -125.151H106.457L44.8592 -63.553V23.5428L106.457 85.1407Z" fill="#FBF3F3"/>
    </svg>
    <h3>
      {{ product.title }}
    </h3>
    {% if custom_product %}
      <a class="custom-anchor-product" href="{{ product.url }}"></a>
      <div class="custom-product-image">
        <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
      </div>
    {% endif %}
    {% unless custom_product %}
      <div class="main-custom-product-card--inner__desc">
        <ul>
          {% for characteristic in characteristics %}
            <li>
              {% if characteristic.icono != blank %}
                <img src="{{ characteristic.icono | image_url: width: 24 }}" />
              {% endif %}
              {{ characteristic.titulo }}
            </li>
          {% endfor %}
        </ul>
        <a href="{{ product.url }}" class="main-custom-link-primary">Ver más detalles</a>
      </div>
    {% endunless %}

    <div class="main-custom-product-card--inner__actions">
      {% if custom_product %}
        <div>
          {{ product.price | money }}<span></span>
        </div>
        <a href="{{ product.url }}" class="main-custom-button is-primary">Comprar</a>
      {% else %}
        <div>
          {{ product.price | money }}<span>/año</span>
        </div>
        <a href="{{ product.url }}" class="main-custom-button is-primary">Contratar</a>
      {% endif %}

    </div>
  </div>
</div>