{% assign plan = product.metafields.custom.plan.value %}
{% assign characteristics = product.metafields.custom.grupo_de_caracteristicas.value %}

<div class="product__media-wrapper-container">

  <div class="containerToltip">
    <div class="product__media-wrapper-master--tooltip">
      <div class="product__media-wrapper-master--tooltip__heading">{{ product.title }}</div>
      <div class="product__media-wrapper-master--tooltip__features">
        <ul>
          {% for characteristic in characteristics %}
            <li>
              {% if characteristic.icono != blank %}
                <img src="{{ characteristic.icono | image_url: width: 24 }}" />
              {% endif %}
              {{ characteristic.titulo }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  <div class="product__media-wrapper-master gallery-slick">
    {% for image in product.images %}
      <div class="product__media-wrapper-master__item">
        <img src="{{ image.src | img_url: '1000x' }}" alt="{{ image.alt | escape }}">
      </div>
    {% endfor %}
  </div>
  <div class="product__media-wrapper-thumbnails gallery-thumbs-slick">
    {% for image in product.images %}
      <div class="product__media-wrapper-master__thumb">
        <img src="{{ image.src | img_url: '200x' }}" alt="{{ image.alt | escape }}">
      </div>
    {% endfor %}
  </div>
</div>